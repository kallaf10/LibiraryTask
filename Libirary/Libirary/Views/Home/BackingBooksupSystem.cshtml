
@{
    ViewData["Title"] = "BackingBooksupSystem";
}

<h1 style="color:white; background-color:darkgray;border-radius:10px;text-align:center;margin-bottom:10px;padding:10px;">Backing Books up System</h1>
@model BackingBooksUpOperation 
<form asp-action="BackingBooksupSystem" asp-controller="Home" method="post">
    <div class="form-group">
        <select asp-for="BSN" class="form-control" style="margin-top:10px;">
            <option disabled>---Select Book---</option>
            @foreach (var book in ViewBag.Model)
            {
                <option value="@book.BSN">@book.bookTitle</option>
            }
        </select>

    </div>
    <div class="form-group">
        <label asp-for="numberofCopiestoBackedUp" class="form-label">Number Of Copies</label>
        <input id="in" asp-for="numberofCopiestoBackedUp" class="form-control" min="1" value="1" type="number" placeholder="Number Of Copies" />
    </div>
    <input value="Submit" type="submit" class="btn btn-outline-success form-control" style="margin-top:20px;" />
</form>
@if (TempData["Warning"] != null)
{
    <script>
        window.onload = function () {
            alert("@TempData["Warning"]")
        }

    </script>
}