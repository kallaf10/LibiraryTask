
@{
    
}
@model BorrowingOperation
<h1 style="color:white; background-color:darkgray;border-radius:10px;text-align:center">BorrowingSystem</h1>
<form asp-action="BorrowingSystem" asp-controller="Home" method="post">
    <div class="form-group">
        <select asp-for="BSN"  class="form-control" style="margin-top:10px;"> 
            <option  disabled>---Select Book---</option>
           @foreach(var book in ViewBag.Model)
           {
                <option  value="@book.BSN">@book.bookTitle</option>
           }
        </select>

    </div>
    <div class="form-group">
        <label asp-for="numberofCopiestoborrow" class="form-label">Number Of Copies</label>
        <input min= "1" value= "1" asp-for="numberofCopiestoborrow" class="form-control" type="number" placeholder="Number Of Copies" />
    </div>
    <input value="Submit" type="submit" class="btn btn-outline-success form-control" style="margin-top:20px;"/>
</form>
@if (TempData["Warning"] != null)
{
    <script>
        window.onload=function()
        {
            alert("@TempData["Warning"]")
        }
       
    </script>
}